<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pra_assessment1mobpro.HomeFragment"
        android:label="Pra-Assessment 1 Mobpro"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_persegiPanjangFragment"
            app:destination="@id/persegiPanjangFragment" />
        <action
            android:id="@+id/action_homeFragment_to_segitigaFragment"
            app:destination="@id/segitigaFragment" />
    </fragment>
    <fragment
        android:id="@+id/persegiPanjangFragment"
        android:name="com.example.pra_assessment1mobpro.PersegiPanjangFragment"
        android:label="Persegi Panjang"
        tools:layout="@layout/fragment_persegi_panjang">
        <action
            android:id="@+id/action_persegiPanjangFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/segitigaFragment"
        android:name="com.example.pra_assessment1mobpro.SegitigaFragment"
        android:label="Segitiga Siku-Siku"
        tools:layout="@layout/fragment_segitiga">
        <action
            android:id="@+id/action_segitigaFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.pra_assessment1mobpro.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>